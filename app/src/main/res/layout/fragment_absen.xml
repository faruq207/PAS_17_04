<!-- res/layout/fragment_home.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Class Title -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10 PPLG 2"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- Container for both profiles -->
    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="16dp">

        <!-- FRANCIS -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageView_francis"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aaaa"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name_francis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FRANCIS GAMALIEL W"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/absen_francis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen: 17"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/gmail_francis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail: fgamalielwauran@gmail.com"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- WAFA -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="16dp">

            <ImageView
                android:id="@+id/imageView_wafa"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/ahamdnwafa"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/name_wafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AHMAD WAFA QADDAFI AL FARUQ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginTop="8dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/absen_wafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Absen: 4"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/gmail_wafa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gmail: dafig57@gmail.com"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
